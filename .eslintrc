{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true
  },
  "globals": {

  },
  "parserOptions": {
    "ecmaVersion": 6,  // 可选 3 5（默认） 6 7
    "sourceType": "module" // 可选script（默认） module
  },
  "rules": {
    // 双峰驼命名格式;
    "camelcase": 2,
    // 对象字面量项尾不能有逗号
    "comma-dangle": [2, "never"],
    // 语句强制分号结尾;
    "semi": [2, "always"],
    // 逗号前后的空格
    "comma-spacing": 0,
    // 逗号风格，换行时在行首还是行尾
    "comma-style": [2, "last"],
    // 禁止使用console;
    //"no-console": 2,
    // 禁止使用debugger;
    "no-debugger": 2,
    // 缩进风格;
    "indent": [2, 4],
    // 换行风格;
    "linebreak-style": [0, "unix"],
    // 引号类型 `` "" '';
    "quotes": [1, "single"],
    // 禁止混用tab和空格;
    "no-mixed-spaces-and-tabs": [2, false],
    // 关键字后面是否要空一格;
    "space-after-keywords": [0, "always"],

  }
}